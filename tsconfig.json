
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node"]
  },
  "include": ["index.tsx", "App.tsx", "types.ts", "services/**/*", "components/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "components/AuthView.tsx",
    "components/CalendarView.tsx",
    "components/DashboardStats.tsx",
    "components/Header.tsx",
    "components/NotificationSimulator.tsx",
    "components/NotificationsView.tsx",
    "components/PersonalShiftsView.tsx",
    "components/PlanningView.tsx",
    "components/UserDirectory.tsx",
    "constants.ts",
    "lib/config.ts",
    "lib/firebase.ts"
  ]
}
